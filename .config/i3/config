#--no-startup-id prevents loading cursor all the time
# Start Polybar
exec_always --no-startup-id killall polybar; polybar example

# Start Spotify with i3 on boot
exec --no-startup-id spotify

# Start Compton on boot
exec --no-startup-id compton -f
#  -b --config ~/.config/compton.conf

# Change the wallpaper as specified
exec_always --no-startup-id feh --bg-scale ~/dotfiles/images/firewatchgreen-bg.jpg
